#include <stdio.h>
#include <stdlib.h>

#define MAX 100

int list[MAX];
int n = 0;

/* Insert at Beginning */
void insertInBeg(int value) {
    if (n == MAX) {
        printf("Error: List is full!\n");
        return;
    }
    for (int i = n; i > 0; i--) {
        list[i] = list[i - 1];
    }
    list[0] = value;
    n++;
    printf("Inserted %d at the beginning.\n", value);
}

/* Insert at End */
void insertAtEnd(int value) {
    if (n == MAX) {
        printf("Error: List is full!\n");
        return;
    }
    list[n++] = value;
    printf("Inserted %d at the end.\n", value);
}

/* Insert at Position (User-friendly: 1-based) */
void insertAtPos(int value, int pos) {
    int index = pos - 1; // Convert to 0-based index
    if (n == MAX) {
        printf("Error: List is full!\n");
        return;
    }
    if (index < 0 || index > n) {
        printf("Error: Invalid position! Range: 1 to %d\n", n + 1);
        return;
    }
    for (int i = n; i > index; i--) {
        list[i] = list[i - 1];
    }
    list[index] = value;
    n++;
    printf("Inserted %d at position %d.\n", value, pos);
}

/* Delete from Beginning */
void deleteFromBeg() {
    if (n == 0) {
        printf("Error: List is empty!\n");
        return;
    }
    for (int i = 0; i < n - 1; i++) {
        list[i] = list[i + 1];
    }
    n--;
    printf("Deleted first element.\n");
}

/* Delete from End */
void deleteFromEnd() {
    if (n == 0) {
        printf("Error: List is empty!\n");
        return;
    }
    n--;
    printf("Deleted last element.\n");
}

/* Delete from Position (User-friendly: 1-based) */
void deleteFromPos(int pos) {
    int index = pos - 1;
    if (n == 0 || index < 0 || index >= n) {
        printf("Error: Invalid position!\n");
        return;
    }
    for (int i = index; i < n - 1; i++) {
        list[i] = list[i + 1];
    }
    n--;
    printf("Deleted element at position %d.\n", pos);
}

/* Display */
void display() {
    if (n == 0) {
        printf("List is currently empty.\n");
        return;
    }
    printf("Current List: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", list[i]);
    }
    printf("\n");
}

/* Search */
void search(int key) {
    for (int i = 0; i < n; i++) {
        if (list[i] == key) {
            printf("Element %d found at position %d (index %d)\n", key, i + 1, i);
            return;
        }
    }
    printf("Element %d not found!\n", key);
}

/* Update (User-friendly: 1-based) */
void update(int pos, int value) {
    int index = pos - 1;
    if (index < 0 || index >= n) {
        printf("Error: Invalid position!\n");
        return;
    }
    list[index] = value;
    printf("Updated position %d to %d.\n", pos, value);
}

/* Optimized Bubble Sort */
void bubbleSort() {
    if (n <= 1) {
        printf("List is too short to sort.\n");
        return;
    }
    int swapped;
    for (int i = 0; i < n - 1; i++) {
        swapped = 0;
        for (int j = 0; j < n - i - 1; j++) {
            if (list[j] > list[j + 1]) {
                int temp = list[j];
                list[j] = list[j + 1];
                list[j + 1] = temp;
                swapped = 1;
            }
        }
        if (swapped == 0) break; // List is already sorted
    }
    printf("List sorted successfully!\n");
}

int main() {
    int choice, value, pos;

    while (1) {
        printf("\n--- Linear List Menu ---");
        printf("\n1. Insert in Beginning  4. Delete from Beg     7. Display List      10. Sort List");
        printf("\n2. Insert at End        5. Delete from End     8. Search Element    11. Exit");
        printf("\n3. Insert at Position   6. Delete from Pos     9. Update Element");
        printf("\nEnter Choice: ");
        
        if (scanf("%d", &choice) != 1) break; // Basic input safety

        switch (choice) {
            case 1:
                printf("Enter value: ");
                scanf("%d", &value);
                insertInBeg(value);
                break;
            case 2:
                printf("Enter value: ");
                scanf("%d", &value);
                insertAtEnd(value);
                break;
            case 3:
                printf("Enter value and position: ");
                scanf("%d %d", &value, &pos);
                insertAtPos(value, pos);
                break;
            case 4:
                deleteFromBeg();
                break;
            case 5:
                deleteFromEnd();
                break;
            case 6:
                printf("Enter position to delete: ");
                scanf("%d", &pos);
                deleteFromPos(pos);
                break;
            case 7:
                display();
                break;
            case 8:
                printf("Enter value to search: ");
                scanf("%d", &value);
                search(value);
                break;
            case 9:
                printf("Enter position and new value: ");
                scanf("%d %d", &pos, &value);
                update(pos, value);
                break;
            case 10:
                bubbleSort();
                break;
            case 11:
                printf("Exiting program...\n");
                return 0;
            default:
                printf("Invalid Choice! Please try again.\n");
        }
    }
    return 0;
}
