#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int N;
    int rupe500, rupe100 , rupe50, rupe20, rupe10, rupe5, rupe2, rupe1;
    scanf("%d", &N);
    rupe500 = N/500;
    N = N%500;
    rupe100 = N/100;
    N = N%100;
    rupe50 = N/50;
    N = N%50;
    rupe20 = N/20;
    N = N%20;
    rupe10 = N/10;
    N = N%10;
    rupe5 = N/5;
    N = N%5;
    rupe2 = N/2;
    N = N%2;
    rupe1 = N;
    
    if(rupe500 > 0){
        printf("500: %d\n", rupe500);
    }
    if(rupe100 > 0){
        printf("100: %d\n", rupe100);
    }
    if(rupe50 > 0){
        printf("50: %d\n", rupe50);
    }
    if(rupe20 > 0){
        printf("20: %d\n", rupe20);
    }
    if(rupe10 > 0){
        printf("10: %d\n", rupe10);
    }
    if(rupe5 > 0){
        printf("5: %d\n", rupe5);
    }
    if(rupe2 > 0){
        printf("2: %d\n", rupe2);
    }
    if(rupe1 > 0){
        printf("1: %d", rupe1);
    }
    
    return 0;
}
